root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

# Не удаляем пробелы в markdown файлах
[*.md]
trim_trailing_whitespace = false

# YAML файлы используют 2 пробела для отступов
[*.yml]
indent_size = 2
[*.yaml]
indent_size = 2
